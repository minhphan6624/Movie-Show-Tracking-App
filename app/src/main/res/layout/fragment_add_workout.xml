<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Workout Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Name"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editText_workout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter workout name"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Workout Date Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Date"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editText_workout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter workout date"
            android:inputType="date"
            android:layout_marginBottom="16dp" />

        <!-- Add Exercise Button -->
        <Button
            android:id="@+id/button_add_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Exercise"
            android:layout_marginBottom="16dp"/>

        <!-- Save Workout Button -->
        <Button
            android:id="@+id/button_save_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Workout"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
