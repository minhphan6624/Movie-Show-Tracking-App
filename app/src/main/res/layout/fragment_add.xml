<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Workout Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Name"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/workout_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter workout name"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Workout Date Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Date"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/workout_date_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter workout date"
            android:inputType="date"
            android:layout_marginBottom="16dp" />


        <!-- Save Workout Button -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Duration"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/workout_duration_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Enter workout duration"
            android:inputType="date" />

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Workout"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
